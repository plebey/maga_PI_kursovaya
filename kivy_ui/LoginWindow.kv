<LoginWindow>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10
        canvas.before:
            Color:
                rgba: 0.15, 0.15, 0.15, 1  # Серый цвет фона (R, G, B, A)
            Rectangle:
                size: 10000, 10000
        size_hint_y: None
        pos_hint: {'center_x': 0.5, 'center_y': 0.4}

        Label:
            pos_hint: {'center_x': 0.5, 'center_y': 0}
            text: '"Молния".Такси'
            size_hint_y: None
            font_size: 50
            height: '300dp'


        Label:
            text: 'Имя пользователя'
            size_hint_y: None
            height: '30dp'

        TextInput:
            size_hint: None, None
            height: '30dp'
            width: root.width * 0.5
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            id: username
            multiline: False

        Label:
            text: 'Пароль'
            size_hint_y: None
            height: '30dp'

        TextInput:
            id: password
            multiline: False
            password: True
            size_hint: None, None
            height: '30dp'
            width: root.width * 0.5
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        Button:
            id: enter
            text: 'Войти'
            on_press: root.login(self)
            size_hint: None, None
            height: '30dp'
            width: root.width * 0.5
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        Button:
            id: reg
            text: 'Еще не зарегистрированы?'
            size_hint: None, None  # Отключаем автоматическое определение размеров
            size: self.texture_size  # Устанавливаем размер под размер текста
            background_color: 0, 0, 0, 0
            color: 0, 0, 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            on_press: root.not_registered()
            height: '30dp'